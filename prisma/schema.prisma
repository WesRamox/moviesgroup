generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // ou mysql / sqlite
}

model User {
  id    String  @id @default(cuid())
  name  String?
  email String? @unique
  image String?

  emailVerified DateTime?
  accounts      Account[]
  sessions      Session[]

  groups      GroupMember[]
  ownedGroups Group[]       @relation("OwnedGroups")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum GroupType {
  COUPLE
  FRIENDS
  FAMILY
}

model Group {
  id          String    @id @default(cuid())
  name        String
  description String?
  type        GroupType
  createdAt   DateTime  @default(now())

  ownerId String
  owner   User   @relation("OwnedGroups", fields: [ownerId], references: [id])

  members GroupMember[]
  movies  Movie[]
  invites Invite[]
}

model Movie {
  id     String @id @default(cuid())
  title  String
  rating Float?

  groupId String
  group   Group  @relation(fields: [groupId], references: [id])
}

model GroupMember {
  id String @id @default(cuid())

  userId  String
  groupId String
  role    String @default("member") // owner | member

  user  User  @relation(fields: [userId], references: [id])
  group Group @relation(fields: [groupId], references: [id])

  @@unique([userId, groupId])
}

enum InviteStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model Invite {
  id        String       @id @default(cuid())
  groupId   String
  group     Group        @relation(fields: [groupId], references: [id])
  email     String
  senderId  String
  status    InviteStatus
  createdAt DateTime     @default(now())

  @@unique([groupId, email])
}
